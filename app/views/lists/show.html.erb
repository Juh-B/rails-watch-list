<h2> <%= @list.name %> </h2>

<ul>
  <% @list.movies.each do |movie| %>
    <li>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <p><strong> <%= movie.title %> </strong></p>
      <p> <%= movie.rating %></p>
      <p> <%= movie.overview %></p>
      <p> <%= movie.poster_url %></p>
      <p> <%= bookmark.comment %> </p>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new movie", new_list_bookmark_path(@list) %>


<%= link_to "delete this list", list_path(@list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>


<%= link_to "Back to all the lists", lists_path(@list) %>
